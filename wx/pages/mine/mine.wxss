/* pages/mine/mine.wxss */
.userinfo {
  margin-left: 270rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  margin-top: 6vh;
  width: 128rpx;
  height: 128rpx;
  border-radius: 60%;
}

.userinfo-nickname {
  margin-top: 2vh;
  color: #4d8411;
  font-size: large;
}

.button {
  position: absolute;
  margin-left: 100rpx;
  margin-top: 100rpx;
  background-color: #e1fcc5;
  color: #587835;
  font-size: 15px;
  text-align: center;
}
.button::after{
  border: 0
}
.num {
  color: #4d8411;
  font-size: small;
}

.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.top-container{
  position: absolute;
  display: flex;
  flex-direction: row;
  top: 0;
  width: 100vw;
  height: 40vh;
  background-color: #a7e564;
}
.middle-container{
  position: relative;
  top: 13vh;
  width: 92vw;
  height: 55vh;
  border-radius: 10rpx;
  background-color: white;
  box-shadow:0px 50px 50px 10px rgba(0, 0, 0, 0.158);
  display: flex;
  flex-direction: column;
}

.infoblock{
  color: #4d8411;
  position: relative;
  top: 6vh;
  height: 16vw;
  font-size: 18px;
  display: flex;
  flex-direction: row;
}
.info-label{ 
  margin-left: 6vw;
  font-weight:bold; 
} 
.info{
  margin-left: 10vw;
}
.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: relative;
  top: 2vh;
  left: 3vw;
  width: 86vw;
  height: 1px;
  transform: scaleY(0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.to_reg{  
  color: #4d8411;
  font-size: 14px;
  position: absolute;
  right: 60rpx;
}



