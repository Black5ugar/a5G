/* pages/main/main.wxss */
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.top-container{
  position: absolute;
  display: flex;
  flex-direction: row;
  top: 0;
  width: 100vw;
  height: 25vh;
  background-color: #a7e564;
}
.left-text-for-top{
  font-size: 22px;
  padding-left: 12vw;
  padding-top: 6vh;
  width: 55vw;
  color: #4d8411;
}
.right-image-for-top{
  width: 45vw;
}
.right-image-for-top image{
  margin-top: 1vh;
  margin-left: 0vw;
  width: 30vw;
}

.middle-container{
  position: relative;
  top: 2vh;
  width: 92vw;
  height: 14vh;
  border-radius: 10rpx;
  background-color: white;
  box-shadow:0px 50px 50px 10px rgba(0, 0, 0, 0.158);
  display: flex;
}
.middle-step{
  width: 28vw;
  margin-left: 2vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.middle-step image{
  width: 13vw;
  align-self: center;
  bottom: 0;
  padding-top: 1vh;
  padding-bottom: -5vh;
}
.middle-step text{
  font-size: 15px;
  color: #4d8411;
  margin: 0;
  align-self: center;
}

.bottom-container{
  position: absolute;
  bottom: 2vh;
  border: 0;
  width: 92vw;
  height: 64vh;
  background-color: white;
  box-shadow:0px 50px 50px 10px rgba(0, 0, 0, 0.212);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  top: 6vh;
  left: 3vw;
  width: 86vw;
  height: 1px;
  transform: scaleY(0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}
.history-first{
  display: flex;
  flex-direction: row;
}
.history-mark{
  background-color:#4d8411;
  margin-left: 7vw;
  margin-right: 2vw;
  width: 3vw;
  height: 3vw;
  border-radius: 50%;
  font-size: 15px;
  align-self: center;
}
.history-date{
  position: relative;
  top: 1vh;
  width: 75vw;
  height: 8vw;
  font-size: 15px;
  color: #4d8411;
  margin-left: 1vw;
}
.history-detail{
  width: 75vw;
  height: 8vh;
  margin-left: 13vw;
  font-size: 15px;
  color: grey;
}