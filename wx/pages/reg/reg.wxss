/* pages/reg/reg.wxss */
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  top: 0;
  background-color: whitesmoke;
}

.userinfo {
  position: absolute;
  top: 0;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  margin-top: 6vh;
  width: 128rpx;
  height: 128rpx;
  border-radius: 60%;
}

.userinfo-nickname {
  margin-top: 2vh;
  color: #4d8411;
  font-size: large;
}

.button {

  margin-top: 130rpx;
  background-color: #a7e564;
  color: #ffffff;
  border-radius: 10rpx;
  width: 88vw;  
  box-shadow:0px 0px 10px rgba(0, 0, 0, 0.158);
  text-align: center;
  position: absolute;
  width: 400rpx;
  height: 86rpx;
  font-size: 15px;
}
.button::after{
  border: 0
}
.num {
  color: #4d8411;
  font-size: small;
}


.middle-container{
  position: relative;
  top: 15vh;
  width: 88vw;
  height: 33vh;
  border-radius: 10rpx;
  background-color: white;
  box-shadow:0px 0px 5px rgba(0, 0, 0, 0.158);
  /*0 0 10 5*/
  display: flex;
  flex-direction: column;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: relative;
  top: 2vh;
  left: 3vw;
  width: 82vw;
  height: 1px;
  transform: scaleY(0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.regblock{
  position: relative;
  top: 6vh;
  height: 16vw;
  font-size: 15px;
  display: flex;
  flex-direction: row;
}
.reglabel{ 
  margin-left: 8vw;
  font-weight:bold; 
} 
.reg{
  margin-left: 12vw;
}
.regbutton{
  size: default;
  margin-top: 23vh;
  background-color: #a7e564;
  color: #ffffff;
  /*border-color: rgba(0, 0, 0, 0.158);*/
  border-radius: 10rpx;
  width: 88vw;  
  box-shadow:0px 0px 10px rgba(0, 0, 0, 0.158);

}



